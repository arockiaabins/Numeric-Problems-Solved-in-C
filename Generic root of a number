// Generic root of a number
// input: number = 123
// output: number = 6

#include<stdio.h>

int main()
{
	int number, sum = 0, reminder = 0;
	
	printf("Enter a number:");
	scanf("%d", &number);
	
	while ( number != 0)
	{
		reminder = number % 10;
		sum = sum + reminder;
		number = number / 10;
	}
	
	printf("Sum of digits of a number:%d", sum);
	
	return 0;
}
